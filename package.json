{
  "name": "mcp-notes-server",
  "version": "1.0.0",
  "description": "MCP Server for managing notes with full CRUD operations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-notes-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:server": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "web": "tsx src/web-server.ts",
    "web:dev": "tsx watch src/web-server.ts",
    "chatgpt": "tsx chatgpt-integration.ts",
    "inspector": "node --inspect dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "notes",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "marked": "^16.4.1",
    "openai": "^6.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
